import time
import cv2
import os
import pyautogui
from time import sleep
from UAV_0715 import split_image, main

# 定義調整參數
big_map_img = cv2.imread("14/jpg/14/23/23-1.jpg")

# 指定要分割的行和列數
num_rows = 6
num_cols = 6
new_num_rows = 3
new_num_cols = 3
all_blocks,block_height,block_width = split_image(big_map_img, num_rows, num_cols)
blocks = all_blocks

# # 定義RTSP流的URL
